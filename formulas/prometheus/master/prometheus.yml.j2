{% for scraper, data in master.direct_scrapers.items() %}
  - job_name: '{{ scraper }}'
{%-  for record in ["scrape_interval", "scrape_timeout", "metrics_path", "authorization"] %}
{%-    if record in data %}
    {{ record }}: {{ data[record] | json }}
{%-    endif %}
{%-  endfor %}
    static_configs:
    - targets:
{%-  for target in data.targets %}
      - {{ target }}:{{ data.port }} at {{ data.location }}{% if target in master.proxy_addresses %} via {{ master.proxy_addresses[target] }}{% endif %}
{%-  endfor %}
    relabel_configs:
    - source_labels: [job]
      regex: (proxy|direct)_(.*)
      target_label: job
      replacement: ${2}
    - source_labels: [__address__]
      regex: (.+):(.+) at (.+)
      replacement: ${1}
      target_label: instance

    - source_labels: [__address__]
      regex: (.+):(.+) at (.+)
      target_label: location
      replacement: ${3}
    - source_labels: [__address__]
      regex: (.+):(.+) at (.+) via (.+)
      target_label: location
      replacement: ${3}

    - source_labels: [__address__]
      regex: ([a-z0-9]+)([.].*|):(.+) at (.+) via (.+)
      replacement: ${1}
      target_label: __param_target
    - source_labels: [__address__]
      regex: ([a-z0-9]+)([.].*|):(.+) at (.+) via (.+)
      replacement: /forward
      target_label: __metrics_path__
    - source_labels: [__address__]
      regex: (.+):(.+) at (.+) via (.+)
      replacement: ${2}
      target_label: __param_port

    - source_labels: [__address__]
      regex: (.+):(.+) at (.+) via (.+)
      replacement: ${4}
      target_label: __address__
    - source_labels: [__address__]
      regex: (.+):(.+) at (.+)
      replacement: ${1}:${2}
      target_label: __address__

{%-   if 'job_name' in data %}
    - source_labels: [job]
      replacement: {{ data.job_name }}
      target_label: job
{%-   endif %}

{%- if scraper == "plone" %}
    metric_relabel_configs:
    - source_labels: [__name__]
      regex: zope_connection_([0-9])+_(.*)
      target_label: thread
      replacement: ${1}
    - source_labels: [__name__]
      regex: zope_connection_([0-9])+_(.*)
      target_label: __name__
      replacement: zope_connection_${2}
{%- endif %}

{% endfor %}

{% for module, data in master.snmp_scrapers.items() %}
{%   if module == "ddwrt" %}{% set highcount = "HC" %}{% else %}{% set highcount = "" %}{% endif %}
  - job_name: 'snmp__{{ module }}__{{ data.location }}'
    static_configs:
    - targets:
{%   for target in data.targets %}
      - {{ target }}
{%   endfor %}
    metrics_path: /snmp
    params:
      module: [{{ module }}]
    relabel_configs:
    - source_labels: [__address__]
      target_label: __param_target
    - source_labels: [__param_target]
      target_label: instance
    - target_label: __address__
      replacement: 10.250.7.6:9116
    - source_labels: [job]
      target_label: module
      regex: (.*)__(.*)__(.*)
      replacement: ${2}
    - source_labels: [job]
      target_label: location
      regex: (.*)__(.*)__(.*)
      replacement: ${3}
    - source_labels: [job]
      target_label: job
      regex: (.*)__(.*)__(.*)
      replacement: ${1}
    - source_labels: [job]
      target_label: source
      regex: (.*)
      replacement: {{ data.prober_name }}
    metric_relabel_configs:

{%   if module == "ddwrt" %}
