[{{ repo_name }}]
name={{ repo_name }} for $releasever - $basearch
baseurl={{ base_url }}{% if not base_url.endswith('/') %}/{% endif %}{% if "Qubes" in grains['os'] or 'Qubes' in grains['osfullname'] %}q{% else %}fc{% endif %}$releasever/
enabled={% if enabled|default(True) %}1{% else %}0{% endif %}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-{{ repo_name }}
metadata_expire={{ metadata_expire }}
